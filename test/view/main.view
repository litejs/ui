

@template top
	.top
		h1 Header
		.nav &each: lng in _.list
			a &lang:"{lng}"; txt:"{lng|upper}"; on:"click", Mediator.setLang; class:"selected", d.lng == El.i18n.get(); class:"lang-{lng}"
		.nav
			@template nav-row
				a &class:"selected", (location.hash||View.home).indexOf(n.href.split('#')[1])>-1
			nav-row[href="#home"] Home
			nav-row[href="#users"] Users
			nav-row[href="#settings"] Settings
			nav-row[href="#test"] Test
			nav-row[href="#broken-link"] Broken link

@template footer
	.footer
		dl.footer--item
			dt litejs.com
			dd>a[href="#help"] How to use
			dd>a[href="#privacy"] Privacy
		dl.footer--item
			dt Contacts
			dd>a[href="mailto:mail@to.com"] email

@view #public #body .content
	.app.max-height
		top.app__row
		.content.loader.app__row
		.footer__spacer
	footer.app__row

@view #private #body .content
	.app.max-height
		top.app__row
			button.top__logout &txt:_("logout"); on:"click", "logout"
		.content.loader.app__row
		.footer__spacer
	footer.app__row

@view 404 #public
	h2 Error 404
	| Page not found.
	| Maybe you want to look something else?

@view home #public
	h2 Home
	div _welcome

@view login #public
	form[action="javascript:"][method=POST] &emitForm:"login"
		h2 Login
		label
			span Username
			input[name=name]
		label
			span Password
			input[name=pass][type=password]
		input[type=submit] &val:_("Log In")


@view users #public
	h2 Users
	ul &each: user in ["1", "2", "3", "4", "5"] limit:2 offset:1
		li
			a &href: "#users/{user}"; txt: _("User {user}")

@view users/{id} #public
	h2 User #{route.id}

@view test #public
	h2 Test
	ul
		li>a[href="#test-form1"] Form 1
	@rel user home vnd.app.home
		.home {home.name}
	@rel user home vnd.app.home.v2
		.home {home.homeName}

