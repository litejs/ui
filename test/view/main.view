
%def #mat ../../ui/component/material.tpl
%def
	settings %.view,%.css
	test-form1,test-grid,pointer %.view
	test-form1 %.view,../binding/persist.js
	test-svg #mat,../../ui/component/Pie.tpl,test-svg.view
