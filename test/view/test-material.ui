%view test-material-ui public
	anim-page
		h2 Material UI
		.grid-2
			.col-3 Buttons
			.col-9
				Button Default
				Button.raised Primary
				Button:disabled Disabled
				Button.raised.is-warning Warn
			.col-3 Fab buttons
			.col-9
				Fab>\+
					;data: "tooltip", "Hello1"
					@click ["Fab-menu1","right-end","bottom",4], "showMenu"
				Fab.Fab--red[data-tooltip-pos=left]>\â€”
					;data: "tooltip", "World\n2"
					;on: "click", ["Fab-menu2", "left-start", "bottom", 1], "showMenu"
				Fab[data-tooltip-pos=right]>\+
					;data: "tooltip", "Hello2"
				Fab>\+
					;data: "tooltip", "Hello3"
				Fab[data-tooltip-pos=bottom]>\+
					;data: "tooltip", "Hello4"
			.col-3 Checkboxes
			.col-9
				Checkbox
					\ Default
				MenuBtn.MenuBtn--back
					;on: "click", ["MenuBtn--back"], "toggleClass"
				MenuBtn.MenuBtn--close
					;on: "click", ["MenuBtn--close"], "toggleClass"
			.col-3 Sliders
				;on: "click", "timerTest"
			.col-9
				Slider[range="1:10:.5"]
				br
				Slider2.no-first[style="width:400px"]
				br
				Slider3[range="10:90:2:4"][format="{val}C"].color[style="width:400px"]
				br
				Toggle
				br
				Slider[range="1:10:.5"].is-vertical
					;SliderVal: 0, 0, "1:10:.5"

