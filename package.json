{
  "name": "@litejs/ui",
  "version": "21.3.1",
  "description": "UI engine for LiteJS full-stack framework",
  "license": "MIT",
  "author": "Lauri Rooden <lauri@rooden.ee>",
  "keywords": [
    "litejs",
    "framework",
    "frontend",
    "browser"
  ],
  "homepage": "https://litejs.com",
  "repository": "github:litejs/ui",
  "bugs": "https://github.com/litejs/dev/issues",
  "main": "index.js",
  "files": [
    "*.js",
    "binding",
    "component",
    "polyfill",
    "css"
  ],
  "litejs": {
    "build": "--out=test/index.html test/dev.html"
  },
  "jshintConfig": {
    "asi": true,
    "laxcomma": true,
    "maxdepth": 6,
    "quotmark": "double"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100,
    "reporter": [
      "lcov",
      "text",
      "html"
    ]
  }
}
