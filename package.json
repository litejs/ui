{
  "name": "@litejs/ui",
  "version": "23.2.0",
  "description": "UI engine for LiteJS full-stack framework",
  "license": "MIT",
  "author": "Lauri Rooden <lauri@rooden.ee>",
  "keywords": [
    "litejs",
    "framework",
    "frontend",
    "browser"
  ],
  "homepage": "https://litejs.com",
  "repository": "github:litejs/ui",
  "bugs": "https://github.com/litejs/dev/issues",
  "main": "index.js",
  "files": [
    "*.js",
    "binding",
    "css",
    "el",
    "polyfill"
  ],
  "scripts": {
    "test": "TZ='Europe/Tallinn' lj test test/index.js --brief --coverage && jshint --verbose *.js src/*.js binding/*.js polyfill/*.js"
  },
  "devDependencies": {
    "@litejs/cli": "23.3.0",
    "jshint": "2.13.6"
  },
  "litejs": {
    "build": "lj b --out=test/index.html test/dev.html"
  },
  "jshintConfig": {
    "asi": true,
    "browser": true,
    "esversion": 5,
    "evil": true,
    "latedef": "nofunc",
    "laxcomma": true,
    "maxdepth": 6,
    "node": true,
    "nonbsp": true,
    "nonstandard": true,
    "quotmark": "double",
    "shadow": "inner",
    "undef": true,
    "unused": true
  }
}
